<h1>Courses</h1>
<table border="0" cellspacing="0" cellpadding="0" width="80%">
  <tr>
    <td>
      <table border="0" cellspacing="0" cellpadding="0" width="80%">
        <tr>
          <td><%= button_to 'Add Course', :action => "new" %></td>
        </tr>
        <tr><td>&nbsp;</td></tr>
      </table>
    </td>
  </tr>
  <tr>
    <td>
      <table border="1" cellspacing="0" cellpadding="3" width="60%">
  <tr bgcolor="#A9F5F2">
    <td width="200"><b>Name</b></td>
    <td width="200"><b>Manage Schedules</b></td>
  </tr>
<% for course in @courses -%>
  <tr>
    <% if permitted_to? :edit, course %>
      <td><%= link_to course.displayName, edit_course_path(course) %></td>
    <% else %>
      <td><%= course.displayName %></td>
    <% end %>
    <td><%= link_to 'Edit', course_course_schedules_path(course.id) %></td>
  </tr>
<% end %>
      </table>
</td>
 </tr>
 <tr>
   <td colspan="2" align="center">
    <%= will_paginate @courses %>
   </td>
 </tr>
</table>

