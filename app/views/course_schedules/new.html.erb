<h1>Course Schedule for Course '<%=  @course.displayName %>'</h1>

<% form_tag :action => 'create', :course_id => params[:id] do %>
<% params[:id] %>
  <%#= f.error_messages %>

  <p>
    <%#*<label for ="course_id">Course_Id </label><br />%>
    <%= hidden_field 'course_schedule', 'course_id', :value => params[:id]%>
  </p>
 <p>
    <label for ="start_date"> Start Date (MM-DD-YYYY) </label><br />
    <%= text_field 'course_schedule', 'start_date' %>
  </p>
  <p>
    <label for ="end_date"> End Date </label><br />
    <%= text_field 'course_schedule', 'end_date' %>
  </p>
  <p>
    <label for ="teacher_name"> Teacher Name </label><br />
    <%= text_field 'course_schedule', 'teacher_name' %>
  </p>

  <p>
    <%= submit_tag "Submit", {:action => 'create', :course_id => params[:id]} %>
  </p>

<% end %>
<%#= link_to 'Back', course_schedules_path %>