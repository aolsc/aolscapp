<br><br>
<table border="0" cellspacing="0" cellpadding="0" width="80%">
  <tr>
    <td>
      <table border="0" cellspacing="0" cellpadding="0" width="100%">
        <tr><td><b>Search course schedules</b></td></tr>
        <tr>
          <td>
            <% form_tag '/member_report/show', :method => 'get' do -%>
    <label for ="coursename">Course</label>&nbsp;&nbsp;
      <%= collection_select(:coursedd, :id, @courses, :id, :displayName,
                            {:prompt => "Select a course"})%>&nbsp;&nbsp;
    <label for ="teachername">Teacher</label>&nbsp;&nbsp;
      <%= collection_select(:teacherssel, :id, @teachers, :id, :fullname,
                            {:prompt => "Select a course"})%>&nbsp;&nbsp;
    <label for ="assistantname">Assistant</label>&nbsp;&nbsp;
      <%= collection_select(:assistantssel, :id, @assistants, :id, :fullname,
                            {:prompt => "Select a course"})%>&nbsp;&nbsp;

  <br><br><label for ="startdate">From Date</label>&nbsp;&nbsp;<%= calendar_date_select_tag "from_date_cal", @sel_from_date, :year_range => 3.years.ago..0.years.ago%>
   &nbsp;&nbsp;<label for ="enddate"> To Date </label>&nbsp;&nbsp;<%= calendar_date_select_tag "end_date_cal", @sel_end_date, :year_range => 3.years.ago..0.years.ago%>&nbsp;&nbsp;<%= submit_tag 'Search',:action => "show" %>
            <% end -%>
          </td>
        </tr>
        <tr><td>&nbsp;</td></tr>
      </table>
    </td>
  </tr>
  <tr>
    <td>
      <% form_tag '/member_report/composemessage' do -%>
      <table border="1" cellspacing="0" cellpadding="5" width="100%">
  <tr bgcolor="#A9F5F2">
    <td width="40"><b> Select </b></td>
    <td width="100"><b>Course</b></td>
    <td width="100"><b>Course Start Date</b></td>
    <td width="100"><b>Course End Date</b></td>
    <td width="100"><b>Teacher</b></td>
    <td width="100"><b>Assistant</b></td>
  </tr>

  <% for courseschedule in @courseschedules -%>
  <tr>
    <td><%= radio_button_tag  "course_schedule_radio", courseschedule.id %></td>
    <td><%= courseschedule.course.displayName %> </td>
    <td><%= courseschedule.start_date.strftime("%m-%d-%Y") %></td>
    <% if !courseschedule.end_date.nil? %>
      <td><%= courseschedule.end_date.strftime("%m-%d-%Y") %></td>
    <% else %>
      <td>&nbsp;</td>
    <% end %>
    <td><%= courseschedule.teacher.fullname %> </td>
    <td><%= courseschedule.assistant.fullname %> </td>
  </tr>
<% end %>
      </table>
      <%= submit_tag "Compose Message" %>
      <% end -%>
</td>
  </tr>
   <tr>
   <td align="right"><br>
    <%= will_paginate @courseschedules %>
   </td>
 </tr>

</table>
