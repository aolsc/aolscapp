<% form_tag '/send_emails/confirmmembers' do -%>
<table border="0" cellspacing="0" cellpadding="0" width="100%">
<tr><td><br><b>Subject</b>&nbsp;</td><td valign="bottom"><%= text_field_tag "subject" %></td></tr>
<tr><td colspan="2"><br><b>Choose option to where to put Member Email Ids</b><br>
&nbsp;&nbsp;&nbsp;To&nbsp;<%= radio_button_tag "emailid_option","To" %>
&nbsp;&nbsp;&nbsp;Bcc&nbsp;<%= radio_button_tag "emailid_option","Bcc" %>
&nbsp;&nbsp;&nbsp;Cc&nbsp;<%= radio_button_tag "emailid_option","Cc" %>
</td>
</tr>
<tr><td colspan="2">&nbsp;</td></tr>
<tr><td valign="top"><b>Content</b>&nbsp;</td><td valign="bottom"><%= text_area_tag 'email_content', nil, :size => "75x40" %></td></tr>
</table>
<br>

<%=  hidden_field_tag 'cs_id', @cs_id %>
<%= submit_tag "Send" %>
<% end -%>